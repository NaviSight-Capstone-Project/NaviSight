<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30sp">

    <TextView
        android:id="@+id/messageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incoming Video Call"
        android:gravity="center"
        android:textColor="#A24DB3"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/caregiverTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="You are being called by your caregiver!"
        android:textColor="#673AB7"
        android:textSize="20sp"
        android:gravity="center" />

    </LinearLayout>

    <!-- Accept Call Button -->
    <LinearLayout
        android:id="@+id/acceptSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/btnAccept"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:backgroundTint="#B2D235"
            android:background="@drawable/circle_green"
            android:src="@drawable/ic_call"
            android:contentDescription="Accept Call"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="40dp"
            android:tint="#1A401C"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept Call"
            android:textColor="#A24DB3"
            android:textSize="32sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <!-- Decline Call Button -->
    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/declineSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/acceptSection"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        >

        <ImageButton
            android:id="@+id/btnDecline"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/circle_red"
            android:src="@drawable/ic_end_call"
            android:contentDescription="Decline Call"
            android:scaleType="fitCenter"
            android:padding="40dp"
            android:tint="#68110F"
            tools:ignore="UseAppTint" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline Call"
            android:textColor="#A24DB3"
            android:textSize="32sp"/>
    </LinearLayout>


</LinearLayout>
