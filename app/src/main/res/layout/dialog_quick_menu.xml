<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <!-- The margin bottom is very optional -->
    <LinearLayout
        android:layout_marginTop="100dp"
        android:id="@+id/menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ball_video_call"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="@drawable/quick_menu_action_ball"
                android:padding="20dp"
                android:src="@drawable/ic_camera_on"
                app:tint="@color/blue"
                android:contentDescription="Video Call Ball"
                android:layout_marginEnd="20dp"
                app:backgroundTint="@color/light_blue"/>

            <ImageView
                android:id="@+id/ball_audio_call"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/quick_menu_action_ball"
                android:padding="20dp"
                android:src="@drawable/ic_call"
                app:tint="@color/light_orange"
                android:contentDescription="Audio Call Ball"
                app:backgroundTint="@color/peach"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ball_snap"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="@drawable/quick_menu_action_ball"
                android:padding="20dp"
                android:src="@drawable/ic_snap_camera"
                app:tint="@color/green"
                android:contentDescription="Snap camera"
                android:layout_marginEnd="120dp"
                app:backgroundTint="@color/light_green"/>

            <ImageView
                android:id="@+id/ball_flip_camera"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="@drawable/quick_menu_action_ball"
                android:padding="20dp"
                android:src="@drawable/ic_switch_camera"
                app:tint="@color/red"
                android:contentDescription="Switch Camera"
            app:backgroundTint="@color/light_red"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ball_ocr"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="@drawable/quick_menu_action_ball"
                android:padding="20dp"
                android:src="@drawable/ic_ocr"
                app:tint="@color/royal_purple"
                android:layout_marginEnd="20dp"
                android:contentDescription="Quick action #2"
                app:backgroundTint="@color/light_purple"/>

            <!-- Braille keyboard note taking feature -->
            <ImageView
                android:id="@+id/ball_bk_note"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="@drawable/quick_menu_action_ball"
                android:padding="20dp"
                android:src="@drawable/ic_keyboard"
                app:tint="@color/white"
                android:contentDescription="Quick action #3"
                app:backgroundTint="@color/royal_purple"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ball_screensaver_lock"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/quick_menu_action_ball"
                android:padding="20dp"
                android:src="@drawable/ic_unlock"
                app:tint="@color/royal_purple"
                android:contentDescription="Quick action #2"
                app:backgroundTint="@color/light_purple"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>