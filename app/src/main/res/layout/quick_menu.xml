<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/center_anchor_v"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/ball_top"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/quick_menu_action_ball"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/center_anchor_v"
            app:layout_constraintEnd_toEndOf="@id/center_anchor_v"
            android:layout_marginTop="200dp"
            android:padding="20dp"
            android:src="@drawable/ic_camera_on"
            app:tint="@color/blue"
            android:contentDescription="Video Call Ball"
            app:backgroundTint="@color/light_blue"/>

        <ImageView
            android:id="@+id/ball_bottom"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/quick_menu_action_ball"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/center_anchor_v"
            app:layout_constraintEnd_toEndOf="@id/center_anchor_v"
            android:layout_marginBottom="200dp"            android:padding="20dp"
            android:src="@drawable/ic_call"
            app:tint="@color/light_orange"
            android:contentDescription="Audio Call Ball"
            app:backgroundTint="@color/peach"/>

        <ImageView
            android:id="@+id/ball_left"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/quick_menu_action_ball"
            app:layout_constraintTop_toTopOf="@id/center_anchor_v"
            app:layout_constraintBottom_toBottomOf="@id/center_anchor_v"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:padding="20dp"
            android:src="@drawable/ic_rounded_1"
            app:tint="@color/green"
            android:contentDescription="Quick action #1"
            app:backgroundTint="@color/light_green"/>

        <ImageView
            android:id="@+id/ball_right"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/quick_menu_action_ball"
            app:layout_constraintTop_toTopOf="@id/center_anchor_v"
            app:layout_constraintBottom_toBottomOf="@id/center_anchor_v"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            android:padding="20dp"
            android:src="@drawable/ic_rounded_2"
            app:tint="@color/red"
            android:contentDescription="Quick action #2"
            app:backgroundTint="@color/light_red"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>