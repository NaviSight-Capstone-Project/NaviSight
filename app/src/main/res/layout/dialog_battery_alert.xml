<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="30sp"
        android:background="@drawable/dialog_battery_alert_bg_light"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/messageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Low Battery"
            android:textColor="#A24DB3"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/batteryStatusDescription"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Your phone is running low than 20%"
            android:textColor="#673AB7"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:scaleX="-1"
            android:src="@drawable/ic_low_battery" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please charge your phone"
            android:textColor="#673AB7"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your caregiver was also notified."
            android:textColor="#673AB7"
            android:textSize="15sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:paddingHorizontal="100dp"
            android:paddingVertical="15dp"
            android:text="OK"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
